<%- include('../partials/header') %>
<style>
  #edit-listing-container {
    display: flex;
    flex-direction: row;
    height: 20vw;
    justify-content: center;
    align-items: center;
  }
</style>
<h3 class="text-center pt-5 mt-5">About Your Plane</h3>
<div class="container" id="edit-listing-container">
  <div class="mt-5">
    <form
      action="/listings/<% listing._id %>/edit"
      method="POST"
      class="text-center m-5"
    >
      <label for="airport" class="text-center">
        Airport
        <select name="airport" class="text-center">
          <option value="WVI">Watsonville Municipal</option>
          <option value="HNL">Honolulu International</option>
          <option value="FXE">Ft. Lauderdale Executive</option>
        </select> </label
      ><br />
      <label for="manufacturer">
        Manufacturer
        <select name="manufacturer">
          <option value="cessna">Cessna</option>
          <option value="cirrus">Cirrus</option>
          <option value="piper">Piper</option>
        </select>
      </label>
      <label for="model">
        Model
        <select name="model">
          <option value="182">182</option>
          <option value="sr22T">SR22T</option>
          <option value="warriorIII">Warrior III</option>
        </select>
      </label>
      <label for="seats">
        Seats
        <select name="seats">
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
        </select>
      </label>
      <label for="ifrCheck">
        IFR
        <input class="form-check-input" type="checkbox" name="ifrCheck" />
      </label>
      <br />
      <div class="container mt-3">
        <button class="btn btn-warning" type="submit" style="width: 40%">
          Update
        </button>
        <%= console.log(listing) %>
        <a href="/listing/<%= listing._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger" type="submit" style="width: 40%">
            Delete
          </button>
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
