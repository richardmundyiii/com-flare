<%- include('../partials/header') %>
<style>
  #edit-listing-container {
    display: flex;
    flex-direction: row;
    height: 20vw;
    justify-content: center;
    align-items: center;
  }
</style>
<h3 class="text-center pt-5 mt-5">About Your Plane</h3>
<div class="container" id="edit-listing-container">
  <div class="mt-5">
    <form
      action="/listings/<%= listing._id %>?_method=PUT"
      method="POST"
      class="text-center m-5"
    >
      <label for="airport" class="text-center">
        Airport
        <select name="airport" class="text-center">
          <option value="WVI">Watsonville Municipal</option>
          <option value="HNL">Honolulu International</option>
          <option value="FXE">Ft. Lauderdale Executive</option>
        </select> </label
      ><br />
      <label for="manufacturer">
        Manufacturer
        <select name="manufacturer">
          <option value="<%= listing.manufacturer %>">
            <%= listing.manufacturer %>
          </option>
        </select>
      </label>
      <label for="model">
        Model
        <select name="model">
          <option value="<%= listing.model %>"><%= listing.model %></option>
        </select>
      </label>
      <label for="seats">
        Seats
        <select name="seats">
          <option value="<%= listing.seats %>"><%= listing.seats %></option>
        </select>
      </label>
      <label for="ifrCheck">
        IFR
        <input class="form-check-input" type="checkbox" name="ifrCheck" />
      </label>
      <br />
      <div class="container mt-3">
        <button class="btn btn-warning">Update</button>
      </div>
    </form>
    <form action="/listings/<%= listing.id %>?_method=DELETE" method="POST">
      <button class="btn btn-danger" style="width: 50%">DELETE</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
