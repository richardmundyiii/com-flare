<%- include('../partials/header') %>
<div class="container-fluid" style="height: 78vh">
  <h1 class="text-center mt-4">Your Profile</h1>
  <div>
    <img src="<%= user.avatar %>" alt="Profile Photo" style="height: 20vh" />
    <h4><%= user.name %></h4>
  </div>

  <div class="container m-3">
    <div class="card">
      <div class="card-header">
        <h3 class="text-center">Reservations</h3>
      </div>
      <div class="card-body"></div>
    </div>
  </div>
  <!-- // User Listings -->

  <!-- .. -->
  <div class="container m-3">
    <div class="card">
      <div class="card-header">
        <h3 class="text-center">Listings</h3>
      </div>
      <card class="card-body">
        <table>
          <thead>
            <th>Info</th>
            <th>Data</th>
          </thead>
          <tbody>
            <% listings.forEach((l) => { %>
            <!-- //     -->
            <% if (user.googleId === l.host.googleId) { %>
            <td><%= l.model %></td>
            <td><%= l.seats %></td>
            <!-- // -->
            <% } %>
            <!-- // -->
            <% }) %>
          </tbody>
        </table>
      </card>
    </div>
  </div>
  <div class="m-3"></div>
</div>
<%- include('../partials/footer') %>
